{
  "name": "tanzu-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cds/city": "^1.1.0",
    "@cds/core": "^5.6.4",
    "@cds/react": "^5.6.4",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.24",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "sass": "^1.49.7",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "lint": "eslint --ext js,ts,tsx src",
    "start": "npm run lint && GENERATE_SOURCEMAP=false react-scripts start",
    "build": "npm run lint && GENERATE_SOURCEMAP=false react-scripts build",
    "build:prod": "npm ci && npm run build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "indent": ["error", 4],
      "max-len": ["error",
        {
          "code": 140,
          "comments": 80,
          "ignoreUrls": true
        }
      ],
      "no-duplicate-imports": "warn",
      "no-multiple-empty-lines": "error",
      "no-unused-vars": "warn",
      "object-curly-spacing": ["warn", "always"],
      "operator-linebreak": ["error", "after"],
      "quotes": ["warn", "single"],
      "semi": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
